<head>
    <link rel="stylesheet" href="/resources/css/formular.css" type="text/css">
    <script>
        
        function hideSuggestions() {
            var suggestionsContainer = document.getElementById("suggestions-container");
            suggestionsContainer.style.display = "none";
        }

       
        setTimeout(hideSuggestions, 5000);
    </script>
</head>
<div class="father-form-contain">
    <div class="child-form-contain">
        <form id="form_inreg"  method="post" class="date"  action="<%= locals.action %>"  enctype="multipart/form-data" >
            <p class="label-design">
                <label >
                    Username: <input type="text" name="username" id="inp-username" value="prof<%= Math.floor(Math.random()*100000) %>" required pattern="[A-Za-z0-9#_./]+">
                </label>
                <% if (locals.err) { %>
                    <% if (locals.suggestions && locals.suggestions.length > 0) { %>
                        <div id="suggestions-container">
                            <p>Username-ul introdus este deja folosit. Vă rugăm să alegeți unul dintre următoarele:</p>
                            <ul>
                                <% suggestions.forEach(function(suggestion) { %>
                                    <li style="list-style-type: none;"><%= suggestion %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                <% } %>
            </p>
            <p class="label-design">
                <label>
                    Nume: <input type="text" name="nume" id="inp-nume"  value="Gogulescu" required >
                </label>
            </p>
            <p class="label-design">
                <label>
                    Prenume: <input type="text" name="prenume" id="inp-prenume" value="Gogu"  >
                </label>
            </p>
            <p class="label-design">
                <label>
                    Parola: <input id="parl" type="password" required  name="parola" value="">
                </label>
            </p>
            <p id="p-reintrod" class="label-design">
                <label >
                    Reintroduceti parola: <input id="rparl" required type="password" name="rparola" value="">
                </label>
            </p>
            <p class="label-design">
                <label>
                    Email: <input type="text" name="email" id="inp-email" required value="profprofprof007@gmail.com"  size="50">
                </label>
            </p>
            <p class="label-design">
                <label>
                    Culoare text chat: <select name="culoare_chat" id="sel-culoare"><option value="red" selected>rosu</option><option value="green">verde</option><option value="blue">albastru</option></select>
                </label>
            </p>
            <p class="label-design">
                <label>
                    Poza: <input type="file" name="poza" class="btn btn-outline-warning">
                </label>			
            </p>
            <% if(!locals.utilizator){ %>
                <p>		
                    <input type="submit" value="Register" class="btn btn-outline-success">
                    <input type="reset" value="Reset" class="btn btn-outline-danger">
                </p>
            <% }else { %>
                <p>		
                    <input type="submit" value="Salveaza" class="btn btn-outline-success">
                    <input type="reset" value="Modifica" class="btn btn-outline-danger">
                </p>
            <% } %>
        </form>
    </div>
    
</div>
